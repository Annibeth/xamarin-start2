<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplestMVVM.Pages.LoginPage">
  
  <StackLayout>

    <Label x:Name1="versionTekst" Text="{Binding VersionTekst}" 
           BackgroundColor="Gray"
           TextColor="Fuchsia"
           FontSize="Large"
           />

    <Entry x:Name="loginEntery" Placeholder="Indtast mobilnummer" Keyboard="Numeric" Text="{Binding LoginEntery, Mode=OneWayToSource}"
           />
    
    <Button x:Name="loginButton" Text="Login"/>
    
    <Label x:Name="statusLabel" Text="{Binding StatusLabel}"/>

   

  </StackLayout>
</ContentPage>